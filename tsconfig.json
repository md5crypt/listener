{
	"include": [
		"src/**/*.ts"
	],
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"declaration": true,
		"sourceMap": false,
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"preserveSymlinks": true,
		"allowSyntheticDefaultImports": true
	}
}